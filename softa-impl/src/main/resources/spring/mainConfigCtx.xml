<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
       	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        
    <!-- coreCtx.xml  -->     
     <bean id ="ExecutionContext"  class="com.softtek.automation.ExecutionContext">
	</bean>
	<!--  -->
	   
        
     <!-- seleniumCtx.xml -->
     
     <bean id ="cucumberCommonUIStepsAdapter"  class="com.softtek.automation.steps.cucumber.CucumberCommonUIStepsAdapter">
		<property name="UIActions" ref="IUActions" />	
		<property name="UIElementFactory" ref="UIElementFactory" />		
	</bean>	
	
	<bean id ="UIElementFactory"  class="com.softtek.automation.element.BasicUIElementFactory">
		<property name="viewsSource" ref="viewSourcesPath" />						
	</bean>
	
	<bean id ="IUActions"  class="com.softtek.automation.actions.selenium.SeleniumUIActions">	
		<property name="testDriver" ref="testDriver" />					
	</bean>
	
	<bean id ="testDriver"  class="com.softtek.automation.driver.selenium.SeleniumDriver" >	
		<property name="properties">
			<props>
				<prop key="driverType">webdriver</prop>
				<prop key="browser">firefox</prop>			
			</props>
		</property>				
	</bean>	
	
	<bean id ="cucumberCommonAppStepsAdapter"  class="com.softtek.automation.steps.cucumber.CucumberCommonAppStepsAdapter" primary="true">
		<property name="AppActions" ref="AppActions" />
		<property name="ExecutionContext" ref="ExecutionContext" />		
	</bean>
	
	<bean id ="AppActions"  class="com.softtek.automation.actions.selenium.SeleniumAppActions">
		<property name="testDriver" ref="testDriver" />
		<property name="applicationsSet" ref="applicationsSet" />		
	</bean>
     
     <!--  -->
     
        
    
	<bean id="executionEnvironment" class="java.lang.String">  		
  		<constructor-arg type="java.lang.String" value="test" />
	</bean>
    	
	<bean id="viewSourcesPath" class="java.lang.String">
  		<constructor-arg type="java.lang.String" value="com.example.test.steps" />
	</bean>		
	
	<bean id ="applicationsSet"  class="com.softtek.automation.ApplicationsSet">		
		<property name="applications" > 
			<list>
				<ref bean="application1"></ref>
				<ref bean="application2"></ref>				 
			</list>
		</property>			
	</bean>
	
	
	
	<bean id ="application1"  class="com.softtek.automation.Application">
		<property name="name" value="application1" />
		<property name="environment" ref="executionEnvironment" />
		<property name="properties">
			<props>
				<prop key="url.prod">www.facebook.com</prop>
				<prop key="url.test">www.facebook.com</prop>			
				<prop key="url.uat">www.facebook.com</prop>
			</props>
		</property>
	</bean>
	
	<bean id ="application2"  class="com.softtek.automation.Application">
		<property name="name" value="hotmail" />
		<property name="properties">
			<props>
				<prop key="URL">www.hotmail.com</prop>			
			</props>
		</property>
	</bean>
	
	
	
	
</beans>